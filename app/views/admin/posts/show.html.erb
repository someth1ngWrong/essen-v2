<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>
</p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Ingredients:</strong>
  <%= render 'ingredients', post: @post %>
</p>

<p>
  <strong>Time:</strong>
  <%= @post.time %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_admin_post_path(@post) %> |
<%= link_to 'Add Post Ingredient', admin_post_post_ingredients_path(@post) %> |
<%= link_to 'Back', admin_posts_path %>
