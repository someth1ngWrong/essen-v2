<% post.post_ingredients.each do |post_ingredient| %>
	<%= post_ingredient.ingredient.ingredient %>
	<%= post_ingredient.amount %>
	<%= post_ingredient.measure %>
	<% ingredient_changes = [
		post_ingredient.ingr_replica1&.ingredient,
		post_ingredient.ingr_replica2&.ingredient,
		post_ingredient.ingr_replica3&.ingredient,
		post_ingredient.ingr_replica4&.ingredient,
		post_ingredient.ingr_replica5&.ingredient
		].compact %>
	<% unless ingredient_changes.empty? %>
		(<%= ingredient_changes.join(' / ')%>)
	<% end %>
	</br>
<% end %>

