<p id="notice"><%= notice %></p>

<%= link_to 'Новая коллекция', new_admin_collection_path, class: 'btn_new-collection' %>
<%= link_to 'Посты', admin_posts_path %>
<%= link_to 'Ингредиенты', admin_ingredients_path %>
<%= link_to 'Пользователи', admin_users_path %><br>
<h1>collections</h1>

<table>
  <thead>
    <tr>
      <th>Фото</th>
      <th>Название</th>
      <th>Пользователь</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= image_tag(collection.image.url, alt: 'Image') if collection.image? %></td>
        <td><%= collection.name %></td>
        <td><%= collection.user_id %></td>

        <td><%= link_to 'Посмотреть', [:admin, collection] %></td>
        <td><%= link_to 'Редактировать', edit_admin_collection_path(collection) %></td>
        <td><%= link_to 'Удалить', [:admin, collection], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
