<p id="notice"><%= notice %></p>

<%= link_to 'New collection', new_admin_collection_path, class: 'btn_new-collection' %>
<%= link_to 'Posts', admin_posts_path %>
<%= link_to 'Ingredients', admin_ingredients_path %>
<%= link_to 'All Users', admin_users_path %><br>
<h1>collections</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= image_tag(collection.image.url, alt: 'Image') if collection.image? %></td>
        <td><%= collection.name %></td>
        <td><%= collection.user_id %></td>

        <td><%= link_to 'Show', [:admin, collection] %></td>
        <td><%= link_to 'Edit', edit_admin_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', [:admin, collection], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
