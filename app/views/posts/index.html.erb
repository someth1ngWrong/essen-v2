<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Time</th>
      <th>Category</th>
      <th>User</th>

      <th>Ingredients</th>

    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.image.url, alt: 'Image') if post.image? %></td>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.time %></td>
        <td><%= post.category.name %></td>
        <td><%= post.user_id %></td>
        <td><%= render 'ingredients', post: post %><br><%= link_to 'Смотреть рецепт', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingredients', ingredients_path %>
