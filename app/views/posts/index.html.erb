
<p id="notice"><%= notice %></p>

<h1 class="test">Posts</h1>

<table class="posts__main">
  <thead>
    <tr>
      <th>Фото</th>
      <th>Название</th>
      <th>Описание</th>
      <th>Как приготовить</th>
      <th>Время приготовления</th>
      <th>Категория блюда</th>
      <!--<th>User</th>-->
      <th>Ингредиенты</th>

    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.image.url, alt: 'Image') if post.image? %></td>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.time %></td>
        <td><%= post.category.name %></td>
        <!--<td><%= post.user.email %></td>-->
        <td><%= render 'ingredients', post: post %><br><%= link_to 'Смотреть рецепт', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ингредиенты', ingredients_path %>
